 @model CourseViewModel
<div class="row course mb-2">
    <hr>
    <div class="col-md-1">
        <img src="@Model.ImagePath" width="52" height="52">
    </div>
    <div class="col-md-5">
        <h2>
            @Model.Title
        </h2>
        <author>@Model.Author</author>
    </div>
    <div class="col-md-2 rating" title="@Model.Rating">
        <rating value="@Convert.ToDouble(Model.Rating)"></rating>
    </div>
    <div class="col-md-2 price">
        @Model.CurrentPrice.ToString()<br /><s>@Model.FullPrice.ToString()</s>
    </div>
    <div class="col-md-2 d-flex align-items-center">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@Model.Id">Dettaglio corso</a>
    </div>
</div>