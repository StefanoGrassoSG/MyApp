@model CourseCreateInputModel;
<h1>
    @ViewData["Title"]
</h1>
<form method="POST">
    <div class="row">
        <div class="col-md-8">
            <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Inserisci un titolo accattivante...">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                <i class="fas fa-rocket"></i> Crea corso!
            </button>
        </div>
    </div>
</form>
