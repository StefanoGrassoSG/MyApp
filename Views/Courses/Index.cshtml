@model List<CourseViewModel>

<div class="row">
    <div class="col-md-8">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <form asp-controller="Courses" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="search" placeholder="Cerca...">
                <div class="input-group-append">
                    <button class="input-group-text" title="Cerca">
                        <i class="fa- fas fa-search"></i>
                    </button>
                </div>  
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <a class="link-underline-light fs-5" asp-route-orderby="Title" asp-route-ascending="true">Titolo</a>
    </div>
    <div class="col-md-2">
        <a class="link-underline-light fs-5" asp-route-orderby="Rating" asp-route-ascending="true">Valutazione</a>
    </div>
    <div class="col-md-2">
        <a class="link-underline-light fs-5" asp-route-orderby="CurrentPrice" asp-route-ascending="true">Prezzo</a>
    </div>
    <div class="col-md-2"></div>
</div>

@foreach(CourseViewModel course in Model)
{
<div class="row course mb-2">
    <hr>
    <div class="col-md-1">
        <img src="@course.ImagePath" width="52" height="52">
    </div>
    <div class="col-md-5">
        <h2>
            @course.Title
        </h2>
        <author>@course.Author</author>
    </div>
    <div class="col-md-2 rating" title="@course.Rating">
        @for(int i = 1;i<=5;i++) 
        {
            @if(course.Rating >= i) 
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating > i - 1)
            {
                <i class="fas fa-star-half-alt"></i>
            }
            else 
            {
                <i class="far fa-star"></i>
            }
        }
    </div>
    <div class="col-md-2 price">
        @course.CurrentPrice.ToString()<br /><s>@course.FullPrice.ToString()</s>
    </div>
    <div class="col-md-2 d-flex align-items-center">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio corso</a>
    </div>
</div>
}

<nav aria-label="Page navigation">
    <ul class="pagination d-flex justify-content-center mt-3">
        <li class="page-item active" aria-current="page">
            <a class="page-link" asp-route-page="1">Page 1 <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="2">Page 2</a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-route-page="3">Page 3</a>
        </li>
    </ul>
</nav>