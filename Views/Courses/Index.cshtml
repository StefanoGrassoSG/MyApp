@model CourseListViewModel

<div class="row">
    <div class="col-md-8">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <form asp-controller="Courses" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="search" placeholder="Cerca..." value="@Model.Input.Search">
                <div class="input-group-append">
                    <button class="input-group-text" title="Cerca">
                        <i class="fa- fas fa-search"></i>
                    </button>
                </div>  
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <a class="link-underline-light fs-5" asp-route-orderby="Title" asp-route-ascending="@(Model.Input.Orderby == "Title" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Titolo @if(Model.Input.Orderby == "Title") {<i class="fas fa-caret-@(Model.Input.Ascending ? "up" : "down")"></i>} </a>
    </div>
    <div class="col-md-2">
        <a class="link-underline-light fs-5" asp-route-orderby="Rating" asp-route-ascending="@(Model.Input.Orderby == "Rating" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Valutazione  @if(Model.Input.Orderby == "Rating") {<i class="fas fa-caret-@(Model.Input.Ascending ? "up" : "down")"></i>} </a>
    </div>
    <div class="col-md-2">
        <a class="link-underline-light fs-5" asp-route-orderby="CurrentPrice" asp-route-ascending="@(Model.Input.Orderby == "CurrentPrice" ? !Model.Input.Ascending : true)" asp-route-search="@Model.Input.Search">Prezzo @if(Model.Input.Orderby == "CurrentPrice") {<i class="fas fa-caret-@(Model.Input.Ascending ? "up" : "down")"></i>} </a>
    </div>
    <div class="col-md-2"></div>
</div>

@foreach(CourseViewModel course in Model.Courses.Results)
{
<div class="row course mb-2">
    <hr>
    <div class="col-md-1">
        <img src="@course.ImagePath" width="52" height="52">
    </div>
    <div class="col-md-5">
        <h2>
            @course.Title
        </h2>
        <author>@course.Author</author>
    </div>
    <div class="col-md-2 rating" title="@course.Rating">
        @for(int i = 1;i<=5;i++) 
        {
            @if(course.Rating >= i) 
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating > i - 1)
            {
                <i class="fas fa-star-half-alt"></i>
            }
            else 
            {
                <i class="far fa-star"></i>
            }
        }
    </div>
    <div class="col-md-2 price">
        @course.CurrentPrice.ToString()<br /><s>@course.FullPrice.ToString()</s>
    </div>
    <div class="col-md-2 d-flex align-items-center">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio corso</a>
    </div>
</div>
}

@{
    int totalPages =(int) Math.Ceiling(Model.Courses.TotalCount / (decimal) Model.Input.Limit);
    int currentPage = Model.Input.Page;
}
<nav aria-label="Page navigation">
    <ul class="pagination d-flex justify-content-center mt-3">
        @if(currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(currentPage-1)">Precedente</a>
            </li>
        }
        @for(int p = 1; p <= totalPages;p++)
        {
            if(p == currentPage)
            {
                <li class="page-item active" aria-current="page">
                    <a class="page-link" asp-route-page="@p">Page @p<span class="sr-only">(current)</span></a>
                </li>
            }
            else 
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@p">Page @p</a>
                </li>
            }
        } 
        @if(currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="@(currentPage+1)">Successiva</a>
            </li>
        }
    </ul>
</nav>